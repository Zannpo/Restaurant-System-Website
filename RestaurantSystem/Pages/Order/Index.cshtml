@model RestaurantSystem.Pages.Order.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].IdSpecialOffer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].OrderTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].OrderStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].PaymentOption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail[0].TotalCost)
